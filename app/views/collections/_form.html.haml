= form_for @collection do |f|
  - if @collection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@collection.errors.count, "error")} prohibited this collection from being saved:"
      %ul
        - @collection.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :colname
    = f.text_area :colname
  .field
    = f.label :shdescription
    = f.text_area :shdescription
  .field
    = f.label :begindate
    = f.date_select :begindate
  .field
    = f.label :enddate
    = f.date_select :enddate
  .field
    = f.label :showrooms
    = f.select :showrooms, Showroom.all.collect{|t| [t.roomname, t.id]}, {}, {:multiple => true}
  .actions
    = f.submit 'Save'
