= form_for @collection do |f|
  = error_messages_for @collection
  .row
    .col-md-6
      .form-group
        = f.label :colname
        = f.text_area :colname, class: 'form-control'
        = f.error_messages_for(:colname)
    .col-md-6
      .form-group
        = f.label :shdescription
        = f.text_area :shdescription, class: 'form-control'
  .row
    .col-md-6
      .form-group
        = f.label :begindate
        .input-group.date.datepicker
          = f.text_field(:begindate, value: lnil(f.object.begindate),
          class: 'form-control')
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
    .col-md-6
      .form-group
        = f.label :enddate
        .input-group.date.datepicker
          = f.text_field(:enddate, value: lnil(f.object.enddate),
          class: 'form-control')
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
  .row
    .col-md-6
      .form-group
        = f.label :showrooms
        = f.select :showrooms, Showroom.all.collect{|t| [t.roomname, t.id]}, {}, {:multiple => true}
  .actions
    = f.submit 'Save'
