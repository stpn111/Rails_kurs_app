%h1 Коллекции

%table.table.table-hover.table-striped.center
  %thead
    %tr
      %th= Collection.human_attribute_name(:colname)
      %th= Collection.human_attribute_name(:shdescription)
      %th= Collection.human_attribute_name(:begindate)
      %th= Collection.human_attribute_name(:enddate)
      %th= Collection.human_attribute_name(:showrooms)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @collections.each do |collection|
      %tr
        %td= collection.colname
        %td= collection.shdescription
        %td= collection.begindate
        %td= collection.enddate
        %td= collection.showrooms.map{|x| x.roomname}.join(', ')
        %td
          = link_to collection, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_collection_path(collection), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to collection, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
%table.table.table-hover.table-striped.center
  %caption
    .pull
      = link_to t('app.collections.new-button'), new_collection_path, class: 'btn btn-primary'
