%h1 Список экспонатов

%table.table.table-hover.table-striped.center
  %thead
    %tr
      %th= Exhibit.human_attribute_name(:name)
      %th= Exhibit.human_attribute_name(:sdescription)
      %th= Exhibit.human_attribute_name(:insurance)
      %th= Exhibit.human_attribute_name(:century)
      %th= Exhibit.human_attribute_name(:height)
      %th= Exhibit.human_attribute_name(:width)
      %th= Exhibit.human_attribute_name(:length)
      %th= Exhibit.human_attribute_name(:tempcontrol)
      %th= Exhibit.human_attribute_name(:himiditycontrol)
      %th= Exhibit.human_attribute_name(:peopleprotect)
      %th= Exhibit.human_attribute_name(:collection)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @exhibits.each do |exhibit|
      %tr
        %td= exhibit.name
        %td= exhibit.sdescription
        %td= exhibit.insurance
        %td= exhibit.century
        %td= exhibit.height
        %td= exhibit.width
        %td= exhibit.length
        %td= exhibit.tempcontrol
        %td= exhibit.himiditycontrol
        %td= exhibit.peopleprotect
        %td= exhibit.collection_id
        %td
          = link_to exhibit, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_exhibit_path(exhibit), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to exhibit, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
%table.table.table-hover.table-striped.center
  %caption
    .pull
      = link_to t('app.exhibits.new-button'), new_exhibit_path, class: 'btn btn-primary'
