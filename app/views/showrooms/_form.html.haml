= form_for @showroom do |f|
  - if @showroom.errors.any?
    #error_explanation
      %h2= "#{pluralize(@showroom.errors.count, "error")} prohibited this showroom from being saved:"
      %ul
        - @showroom.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :roomname
    = f.text_area :roomname
  .actions
    = f.submit 'Save'
